{
  "name": "@cheerbase/wwt-showcase",
  "version": "0.0.0",
  "private": true,
  "license": "PROPRIETARY",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:demo": "pnpm --filter @cheerbase/wwt-demo dev",
    "dev:local": "pnpm db:migrate && pnpm db:seed && pnpm dev:demo",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:migrate": "dotenv -e .env -- prisma migrate dev",
    "db:seed": "dotenv -e .env -- tsc -p prisma/tsconfig.build.json && node prisma/dist/prisma/seed.js",
    "typecheck": "turbo check-types",
    "lint:strict": "pnpm lint --max-warnings=0",
    "forge": "turbo forge && pnpm format"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.20.1",
    "@types/node": "^20.19.0",
    "tsx": "^4.19.2",
    "prisma": "^6.2.1",
    "prettier": "^3.5.1",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.0.8",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.2",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.2.1",
    "wait-port": "^1.1.0"
  }
}
